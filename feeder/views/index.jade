extends layout

block content
        .row
            .col-6
                h4 Postgre contacts
                if postgreContacts 
                        table.table
                            thead
                                tr
                                    th(scope="col") First Name
                                    th(scope="col") Last Name
                                    th(scope="col") Email
                                    th(scope="col") Phone Number
                            tbody
                                if !postgreContacts.length
                                    tr
                                        .alert.alert-danger There is no contacts
                                each contact in postgreContacts
                                    tr
                                        td #{contact.firstName}
                                        td #{contact.lastName}
                                        td #{contact.email}
                                        td #{contact.phoneNumber}
            .col-6
                h4 Mongo contacts
                if mongoContacts
                        table.table
                            thead
                                tr
                                    th(scope="col") First Name
                                    th(scope="col") Last Name
                                    th(scope="col") Email
                                    th(scope="col") Phone Number
                            tbody
                                if !mongoContacts.length
                                    tr 
                                        .alert.alert-danger There is no contacts
                                each contact in mongoContacts
                                    tr
                                        td #{contact.firstName}
                                        td #{contact.lastName}
                                        td #{contact.email}
                                        td #{contact.phoneNumber}
